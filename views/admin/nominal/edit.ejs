<%- include('../../parts/header.ejs') %>
<%- include('../../parts/navbar.ejs') %>
<%- include('../../parts/sidebar.ejs') %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Edit Nominal</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                        <label>Nama Koin</label>
                        <select class="form-control select2" name="coinName" required>
                          <option selected="selected">Pilih koin</option>
                          <option value="Diamond" 
                          <% if(nominal.coinName === "Diamond") { %>
                            selected
                          <% } %>
                          >Diamond</option>
                          <option value="Gold"
                          <% if(nominal.coinName === "Gold") { %>
                            selected
                          <% } %>
                          >Gold</option>
                          <option calue="Jewel"
                          <% if(nominal.coinName === "Jewel") { %>
                            selected
                          <% } %>
                          >Jewel</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="coinQuantity">Jumlah koin</label>
                        <input type="number" class="form-control" id="coinQuantity" name="coinQuantity" placeholder="Enter jumlah koin" value="<%= nominal.coinQuantity %>" required>
                      </div>
                      <div class="form-group">
                        <label for="price">Harga</label>
                        <input type="number" class="form-control" id="price" name="price" placeholder="Enter harga" value="<%= nominal.price %>"  required>
                      </div>
                    </div>
                    <!-- /.card-body -->
    
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                  </form>
                </div>
    
            </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <%- include('../../parts/footer.ejs') %>
  <%- include('../../parts/js.ejs') %>