<%- include('../../parts/header.ejs') %>
<%- include('../../parts/navbar.ejs') %>
<%- include('../../parts/sidebar.ejs') %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Edit Payment</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="type">Tipe</label>
                        <input type="text" class="form-control" id="type" name="type" placeholder="Enter tipe" value="<%= payment.type %>" required>
                      </div>
                      <div class="form-group">
                        <label>Bank</label>
                        <div class="select2-purple">
                          <select class="form-control select2" multiple="multiple" name="banks" data-placeholder="Pilih bank" required>
                            <% banks.forEach(bank=>{ %>
                              <option value="<%= bank._id %>"
                                <% payment.banks.forEach(item => { %>
                                  <% if(bank._id.toString() === item._id.toString()) { %>
                                    selected
                                    <% } %>
                                <% }) %>
                                >
                                <%= bank.name %> - <%= bank.bank_name %> - <%= bank.number %></option>
                            <%})%>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                  </form>
                </div>
    
            </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <%- include('../../parts/footer.ejs') %>
  <%- include('../../parts/js.ejs') %>